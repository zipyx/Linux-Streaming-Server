@model Clam.Models.RoleAccountRegister
@{ var RoleId = ViewBag.RoleId;}
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" disabled class="form-control" type="text" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Delete", "Delete", new { Id = RoleId }, new { @class = "btn btn-danger" })
            </div>
        </form>
    </div>
</div>

<div class="card">
    <h5 class="card-header">Role Management</h5>
    <div class="card-body">
        <h5 class="card-title">Current Users in Role</h5>
        <table>
            <thead>
                <tr>
                    <th>Users:</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users.ToList())
                {
                    <tr>
                        <td>@item</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-muted">
        @Html.ActionLink("Update Users", "EditRoleUsers", new { Id = Model.Id }, new { @class = "btn btn-primary" })
    </div>
</div>

<div class="card">
    <h5 class="card-header">Claim Management</h5>
    <div class="card-body">
        <h5 class="card-title">Current Claims in Role</h5>
        <table>
            <thead>
                <tr>
                    <th>Claims:</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Claims.ToList())
                {
                    <tr>
                        <td>@item</td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer text-muted">
        @Html.ActionLink("Update Claims", "GetManageRoleClaim", new { Id = RoleId }, new { @class = "btn btn-primary" })
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
