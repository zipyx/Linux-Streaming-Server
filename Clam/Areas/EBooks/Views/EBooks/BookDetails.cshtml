@using Microsoft.AspNetCore.Identity
@using ClamDataLibrary.Models
@model Clam.Areas.EBooks.Models.AreaUserBooks
@{
    ViewData["Title"] = "BookDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var BookId = ViewBag.BookId;
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/ebooks/manage">Books</a></li>
        <li class="breadcrumb-item active" aria-current="page">Book Details</li>
    </ol>
</nav>

<div>
