@model Clam.Areas.Storage.Models.StreamStorageFile

<table class="table">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.AreaUserPersonalCategoryItems[0].FileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaUserPersonalCategoryItems[0].FileType)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.AreaUserPersonalCategoryItems[0].Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model.AreaUserPersonalCategoryItems)
        {
            <tr>
                <td class="text-left">
                    <a href="/storage/view/@item.ItemId" style="color:darkgrey">
                        @Html.DisplayFor(modelItem => item.FileName, new { @class = "table-color-storage" })
                    </a>
                </td>
                <td class="text-center">
                    <a href="/storage/view/@item.ItemId" style="color:darkgrey">
                        @Html.DisplayFor(modelItem => item.FileType, new { @class = "table-color-storage" })
                    </a>
                </td>
                <td class="text-center">
                    <a href="/storage/view/@item.ItemId" style="color:darkgrey">
                        @Html.DisplayFor(modelItem => item.Size, new { @class = "table-color-storage" })
                    </a>
                </td>
                <td class="text-center">
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-@item.ItemId">
                        Delete
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="modal-@item.ItemId" tabindex="-1" role="dialog" aria-labelledby="notify-@item.ItemId" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="notify-@item.ItemId">@item.FileName</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this File?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    @using (Html.BeginForm(actionName: "Remove", controllerName: "Storage", new { id = item.ItemId }, method: FormMethod.Post))
                                    {
                                        <button type="submit" class="btn btn-danger">Confirm Delete</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

